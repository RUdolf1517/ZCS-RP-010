# Конфигурационный файл для панели управления учениками ZCS-RP-010
# Скопируйте этот файл в .env и заполните значения
# Или запустите install.sh для автоматической настройки

# Данные администратора
ADMIN_USERNAME=admin
ADMIN_PASSWORD=12345

# Секретный ключ для сессий Flask
# Сгенерируйте безопасный ключ: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=dev-secret-key-change-in-production

# Настройки сервера
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False
